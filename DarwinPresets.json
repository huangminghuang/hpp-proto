{
    "version": 9,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 23,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "ci-macos-base",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "HPP_PROTO_PROTOC": "find",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "CMAKE_C_COMPILER_LAUNCHER": "ccache",
                "CMAKE_CXX_COMPILER_LAUNCHER": "ccache"
            }
        },
        {
            "name": "ci-macos-release",
            "inherits": "ci-macos-base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "ci-macos-coverage",
            "inherits": "ci-macos-base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Coverage"
            }
        },
        {
            "name": "asan",
            "hidden": true,
            "displayName": "Address Sanitizer",
            "cacheVariables": {
                "CMAKE_CXX_FLAGS": "-fsanitize=address,undefined",
                "CMAKE_EXE_LINKER_FLAGS": "-fsanitize=address,undefined"
            }
        },
        {
            "name": "msan",
            "hidden": true,
            "displayName": "Memory Sanitizer",
            "cacheVariables": {
                "CMAKE_CXX_FLAGS": "-fsanitize=memory",
                "CMAKE_EXE_LINKER_FLAGS": "-fsanitize=memory"
            }
        },
        {
            "name": "clang",
            "displayName": "Homebrew Clang with libc++",
            "description": "Use the Homebrew LLVM toolchain and its bundled libc++",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_C_COMPILER": "/opt/homebrew/opt/llvm/bin/clang",
                "CMAKE_CXX_COMPILER": "/opt/homebrew/opt/llvm/bin/clang++",
                "CMAKE_CXX_FLAGS": "-isystem /opt/homebrew/opt/llvm/include/c++/v1",
                "CMAKE_EXE_LINKER_FLAGS": "-L/opt/homebrew/opt/llvm/lib/c++ -Wl,-rpath,/opt/homebrew/opt/llvm/lib/c++ -Wl,-no_warn_duplicate_libraries",
                "CMAKE_SHARED_LINKER_FLAGS": "-L/opt/homebrew/opt/llvm/lib/c++ -Wl,-rpath,/opt/homebrew/opt/llvm/lib/c++ -Wl,-no_warn_duplicate_libraries"
            }
        }
    ]
}
