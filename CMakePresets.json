{
    "version": 9,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 23,
        "patch": 0
    },
    "include": [
        "${hostSystemName}Presets.json"
    ],
    "configurePresets": [
        {
            "name": "default",
            "displayName": "Default Config",
            "description": "Default build using Ninja generator",
            "generator": "Ninja",
            "hidden": true,
            "cacheVariables": {
                "HPP_PROTO_PROTOC_PLUGIN": true,
                "HPP_PROTO_TESTS": true
            }
        },
        {
            "name": "core-dev",
            "inherits": [
                "default",
                "asan"
            ],
            "displayName": "Core Developer Mode",
            "description": "Builds hpp-proto core library unit tests only",
            "binaryDir": "${sourceDir}/build/debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "HPP_PROTO_PROTOC_PLUGIN": false
            }
        },
        {
            "name": "dev",
            "inherits": [
                "default",
                "asan"
            ],
            "condition": {
                "type": "notEquals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            },
            "displayName": "Developer Mode",
            "description": "Debug build and test against google protobuf implementation",
            "binaryDir": "${sourceDir}/build/debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "HPP_PROTO_TEST_USE_PROTOBUF": true,
                "HPP_PROTO_PROTOC": "compile"
            }
        },
        {
            "name": "linux-dev",
            "inherits": [
                "default",
                "asan",
                "clang"
            ],
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            },
            "displayName": "Developer Mode",
            "description": "Debug build and test against google protobuf implementation",
            "binaryDir": "${sourceDir}/build/debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "HPP_PROTO_TEST_USE_PROTOBUF": true,
                "HPP_PROTO_PROTOC": "compile"
            }
        },
        {
            "name": "dev-msan",
            "inherits": [
                "default",
                "msan"
            ],
            "displayName": "Memory Sanitizer Mode",
            "binaryDir": "${sourceDir}/build/msan",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "release",
            "inherits": "default",
            "displayName": "Release",
            "description": "Optimized build with tests",
            "binaryDir": "${sourceDir}/build/release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_CXX_FLAGS_RELEASE": "-O3 -g -fno-optimize-sibling-calls",
                "HPP_PROTO_PROTOC": "find"
            }
        },
        {
            "name": "RelWithDebInfo",
            "inherits": "default",
            "displayName": "RelWithDebInfo",
            "description": "Optimized build with tests",
            "binaryDir": "${sourceDir}/build/RelWithDebInfo",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo",
                "HPP_PROTO_PROTOC": "find"
            }
        },
        {
            "name": "benchmark",
            "inherits": "default",
            "displayName": "Benchmark",
            "description": "Optimized build with benchmark",
            "binaryDir": "${sourceDir}/build/release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "HPP_PROTO_BENCHMARKS": true,
                "HPP_PROTO_PROTOC": "compile"
            }
        },
        {
            "name": "Coverage",
            "inherits": "default",
            "displayName": "Coverage",
            "description": "Coverage Build",
            "binaryDir": "${sourceDir}/build/coverage",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Coverage",
                "HPP_PROTO_PROTOC": "find"
            }
        },
        {
            "name": "find_protobuf",
            "inherits": [
                "default",
                "asan"
            ],
            "displayName": "find_protobuf",
            "description": "find_protobuf Build",
            "binaryDir": "${sourceDir}/build/find_protobuf",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "HPP_PROTO_PROTOC": "find"
            }
        },
        {
            "name": "Fuzz",
            "inherits": [
                "default",
                "clang"
            ],
            "condition": {
                "type": "notEquals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            },
            "displayName": "Fuzz",
            "description": "Fuzz Build",
            "binaryDir": "${sourceDir}/build/fuzz",
            "cacheVariables": {
                "HPP_PROTO_PROTOC": "find",
                "CMAKE_BUILD_TYPE": "RelWithDebInfo"
            }
        }
    ],
    "testPresets": [
        {
            "name": "all",
            "displayName": "Automated Tests",
            "configurePreset": "dev",
            "output": {
                "verbosity": "verbose",
                "outputOnFailure": true
            }
        }
    ]
}
