{
    "version": 9,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 23,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "ci-linux-base",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "HPP_PROTO_PROTOC": "find",
                "CMAKE_C_COMPILER_LAUNCHER": "ccache",
                "CMAKE_CXX_COMPILER_LAUNCHER": "ccache"
            }
        },
        {
            "name": "ci-linux-release",
            "inherits": "ci-linux-base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "ci-linux-debug",
            "inherits": "ci-linux-base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "ci-linux-asan-ubsan",
            "inherits": "ci-linux-base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_CXX_FLAGS": "-fsanitize=address,undefined -fno-omit-frame-pointer",
                "CMAKE_EXE_LINKER_FLAGS": "-fsanitize=address,undefined"
            }
        },
        {
            "name": "ci-linux-coverage",
            "inherits": "ci-linux-base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Coverage"
            }
        },
        {
            "name": "asan",
            "hidden": true,
            "displayName": "Address Sanitizer",
            "cacheVariables": {
                "CMAKE_CXX_FLAGS": "-fsanitize=address,undefined",
                "CMAKE_EXE_LINKER_FLAGS": "-fsanitize=address,undefined"
            }
        },
        {
            "name": "msan",
            "hidden": true,
            "displayName": "Memory Sanitizer",
            "cacheVariables": {
                "CMAKE_CXX_FLAGS": "-fsanitize=memory",
                "CMAKE_EXE_LINKER_FLAGS": "-fsanitize=memory"
            }
        },
        {
            "name": "clang",
            "displayName": "clang",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "/usr/bin/clang",
                "CMAKE_CXX_COMPILER": "/usr/bin/clang++"
            }
        }
    ]
}
